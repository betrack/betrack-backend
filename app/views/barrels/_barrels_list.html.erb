<h3> Barriles </h3>
<div class="row">
  <% @barrels.each do |barrel| %>
    <div class="col-md-10 col-md-offset-1 col-lg-4 col-lg-offset-0" style="padding:0 30px 0 30px; margin-bottom:50px;"> 
      <div class="row"> 
        <div class="col-xs-6" style="padding:0 30px 0 15px;">
          <div class="row">
            <div class="col-xs-12 well" style="padding: 30px 10px 30px 10px;">
              <span class="icon-thermometer-half custom-icon <%= temperature_icon_color(barrel.last_temperature) %>" ></span>
              <span style="font-size:20px;"> &nbsp;<%= barrel.last_temperature %>°C </span>
            </div>
          </div>
        </div>
        <div class="col-xs-6" style="padding:0 15px 0 30px;">
          <div class="row">
            <div class="col-xs-12 well" style="padding: 30px 10px 30px 10px;">
              <span class="icon-pub custom-icon <%= barrel_state_color barrel.last_state %>"></span>
              <span style="font-size:20px;"> &nbsp;<%= barrel_state_label barrel.last_state %> </span>
            </div>
          </div>
        </div>
        <div class="col-xs-12 well"> 
          <div class="row"> 
            <div class="col-xs-12">
              <dl class="dl-horizontal">
                <dt><strong class="to"><%= t('models_attributes.barrel.barrel_type').capitalize %>:</strong></dt>
                <dd><%= barrel.barrel_type %></dd>
                <dt><strong class="to"><%= t('models_attributes.barrel.number').capitalize %>:</strong></dt>
                <dd><%= barrel.number %></dd>
                <dt><strong class="to"><%= t('models_attributes.barrel.battery_level').capitalize %>:</strong></dt>
                <dd><%= barrel.battery_level.try(:floor) %>%</dd>
                <dt><strong class="to"><%= t('models_attributes.barrel.transport').capitalize %>:</strong></dt>
                <dd><%= barrel.transport.try(:number) %></dd>
              </dl>
            </div>
            <div class="col-xs-12">
              <%= link_to 'Ver más', barrel_path(barrel, :source => request.path), :class => 'btn btn-primary btn-raised btn-sm pull-right' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
