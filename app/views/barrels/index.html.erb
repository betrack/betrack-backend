<p id="notice"><%= notice %></p>

<h1>Barrels</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Number</th>
      <th>Content</th>
      <th>Type details</th>
      <th>Rnpa</th>
      <th>Description</th>
      <th>Alcohol</th>
      <th>Ibu</th>
      <th>Ingredients</th>
      <th>Elaboration date</th>
      <th>Expiration date</th>
      <th>Lot</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barrels.each do |barrel| %>
      <tr>
        <td><%= barrel.type %></td>
        <td><%= barrel.number %></td>
        <td><%= barrel.content %></td>
        <td><%= barrel.type_details %></td>
        <td><%= barrel.rnpa %></td>
        <td><%= barrel.description %></td>
        <td><%= barrel.alcohol %></td>
        <td><%= barrel.ibu %></td>
        <td><%= barrel.ingredients %></td>
        <td><%= barrel.elaboration_date %></td>
        <td><%= barrel.expiration_date %></td>
        <td><%= barrel.lot %></td>
        <td><%= barrel.comments %></td>
        <td><%= link_to 'Show', barrel %></td>
        <td><%= link_to 'Edit', edit_barrel_path(barrel) %></td>
        <td><%= link_to 'Destroy', barrel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

