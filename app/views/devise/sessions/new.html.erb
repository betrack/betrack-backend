<div class="login"> 
  <div class="container-fluid">
    <div class="row"> 
      <div class="col-xs-12 col-md-offset-4 col-md-4">
        <img class="login-title" src="/login-title.png" alt="login" />
      </div>
      <div class="col-xs-12 col-md-offset-4 col-md-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-signin") do |f| %>
          <%= f.label :email, :class => "sr-only" %>
          <%= f.email_field :email, :class => "form-control", :placeholder => "Email", :required => true %>
          <%= f.label :password, :class => "sr-only" %>
          <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Contraseña", :required => true %>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %> Recordarme
              <% end %>
            </div>
          <% end %>
          <%= f.submit "Iniciar sesión", :class => "btn btn-lg btn-primary btn-block btn-raised" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
