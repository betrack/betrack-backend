<%= form_for @transport, :html => { :class => "form-horizontal transport" } do |f| %>

  <% if @transport.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@transport.errors.count, "error") %> prohibited this transport from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @transport.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class="form-group">
    <%= f.label :current_lat, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :current_lat, :class => 'form-control' %>
    </div>
    <%=f.error_span(:current_lat) %>
  </div>
  <div class="form-group">
    <%= f.label :current_lon, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :current_lon, :class => 'form-control' %>
    </div>
    <%=f.error_span(:current_lon) %>
  </div>
  <div class="form-group">
    <%= f.label :temperature, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :temperature, :class => 'form-control' %>
    </div>
    <%=f.error_span(:temperature) %>
  </div>
  <div class="form-group">
    <%= f.label :temperature_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :temperature_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:temperature_date) %>
  </div>
  <div class="form-group">
    <%= f.label :identification, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :identification, :class => 'form-control' %>
    </div>
    <%=f.error_span(:identification) %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone_number) %>
  </div>
  <div class="form-group">
    <%= f.label :driver, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :driver, :class => 'form-control' %>
    </div>
    <%=f.error_span(:driver) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transports_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
