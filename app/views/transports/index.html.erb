<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-9">
      <div class="page-header">
        <h3><%=t '.title', :default => t('models_names.transports').capitalize %></h3>
      </div>
    </div>
    <div class="col-xs-12 col-md-3">
      <%= link_to new_transport_path, :class => 'btn btn-primary btn-lg btn-raised pull-right btn-block' do %>
        <i class="fa fa-plus"></i>
        <span>  <%= "#{t('buttons.new')} #{t('models_names.transport')}" %> </span>
      <% end %>
    </div>
    <div class="col-lg-12">  
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t('models_attributes.store.number') %></th>
            <th><%= t('models_attributes.store.identification') %></th>
            <th><%= t('models_attributes.store.driver') %></th>
            <th><%= t('models_attributes.store.phone_number') %></th>
            <th><%=t '.actions', :default => t("miscellaneous.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @transports.each do |transport| %>
            <tr>
              <td><%= transport.number %></td>
              <td><%= transport.identification %></td>
              <td><%= transport.driver %></td>
              <td><%= transport.phone_number %></td>
              <td>
                <%= link_to t('.show', :default => t("buttons.show")),
                  transport_path(transport), :class => 'btn btn-default btn-xs btn-raised' %>
                <%= link_to t('.edit', :default => t("buttons.edit")),
                  edit_transport_path(transport), :class => 'btn btn-default btn-xs btn-raised' %>
                <%= link_to t('.destroy', :default => t("buttons.delete")),
                  transport_path(transport),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t('buttons.delete', :default => 'Are you sure?')) },
                  :class => 'btn btn-xs btn-raised btn-danger' %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
