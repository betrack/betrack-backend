<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">  

        <%- model_class = Transport -%>
        <div class="page-header">
          <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
        </div>

        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
          <dd><%= @transport.number %></dd>
          <dt><strong><%= model_class.human_attribute_name(:current_lat) %>:</strong></dt>
          <dd><%= @transport.current_lat %></dd>
          <dt><strong><%= model_class.human_attribute_name(:current_lon) %>:</strong></dt>
          <dd><%= @transport.current_lon %></dd>
          <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
          <dd><%= @transport.temperature %></dd>
          <dt><strong><%= model_class.human_attribute_name(:temperature_date) %>:</strong></dt>
          <dd><%= @transport.temperature_date %></dd>
          <dt><strong><%= model_class.human_attribute_name(:identification) %>:</strong></dt>
          <dd><%= @transport.identification %></dd>
          <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
          <dd><%= @transport.phone_number %></dd>
          <dt><strong><%= model_class.human_attribute_name(:driver) %>:</strong></dt>
          <dd><%= @transport.driver %></dd>
        </dl>

        <%= link_to t('.back', :default => t("helpers.links.back")),
                      transports_path, :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_transport_path(@transport), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      transport_path(@transport),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>

    </div>
  </div>
</div>
