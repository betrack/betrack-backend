<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">  

      <%- model_class = Store -%>
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
      </div>

      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:lat) %>:</strong></dt>
        <dd><%= @store.lat %></dd>
        <dt><strong><%= model_class.human_attribute_name(:lon) %>:</strong></dt>
        <dd><%= @store.lon %></dd>
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @store.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:social_reason) %>:</strong></dt>
        <dd><%= @store.social_reason %></dd>
        <dt><strong><%= model_class.human_attribute_name(:cuit) %>:</strong></dt>
        <dd><%= @store.cuit %></dd>
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @store.email %></dd>
        <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
        <dd><%= @store.phone_number %></dd>
        <dt><strong><%= model_class.human_attribute_name(:last_heartbeat) %>:</strong></dt>
        <dd><%= @store.last_heartbeat %></dd>
        <dt><strong><%= model_class.human_attribute_name(:store_type) %>:</strong></dt>
        <dd><%= @store.store_type %></dd>
      </dl>

      <%= link_to t('.back', :default => t("helpers.links.back")),
                    stores_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_store_path(@store), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    store_path(@store),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>

    </div>
  </div>
</div>

