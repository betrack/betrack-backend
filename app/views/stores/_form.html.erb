<%= form_for @store, :html => { :class => "form-horizontal store" } do |f| %>

  <% if @store.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @store.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :lat, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lat, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lat) %>
  </div>
  <div class="form-group">
    <%= f.label :lon, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lon, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lon) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :social_reason, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :social_reason, :class => 'form-control' %>
    </div>
    <%=f.error_span(:social_reason) %>
  </div>
  <div class="form-group">
    <%= f.label :cuit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cuit, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cuit) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone_number) %>
  </div>
  <div class="form-group">
    <%= f.label :last_heartbeat, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_heartbeat, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last_heartbeat) %>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stores_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
